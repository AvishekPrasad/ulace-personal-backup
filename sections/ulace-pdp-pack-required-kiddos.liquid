{% if section.settings.show_section %}
	{% include 'ulace-pdp-pack-required' %}
{% endif %}	
{% schema %}
  {
    "name": "Pair Of Shoes Bar",
	"tag": "section",
	"class": "pdp-shoes-pair clearfix",
    "settings": [
		{
			"type": "checkbox",
			"id": "show_section",
			"label": "Show Section",
			"default": true
		},
		{
			"type": "color",
			"id": "background_color",
			"label": "Background Color",
			"default": "#EE202F"
		},
		{
			"type": "text",
			"id": "description_text",
			"label": "Content"
		},
		{
			"type": "checkbox",
			"id": "show_description_text",
			"label": "Show Description",
			"default": false
		},
		{
			"type": "textarea",
			"id": "long_description_text",
			"label": "Short Description Text"
		}
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
